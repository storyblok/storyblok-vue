{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "strict": false,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "types": ["vite/client", "node", "vitest/globals"]
  },
  "extends": "@vue/tsconfig/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vue",
  "include": ["./*.vue", "./**/*.ts", "cypress.config.ts"],
  "exclude": ["node_modules/*", "vite.config.ts", "dist", "./**/*.test.ts"]
}
